<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layoutDirection="ltr">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<LinearLayout
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<ImageButton
				android:id="@+id/btn_back"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:contentDescription="@null"
				android:layout_gravity="start"
				android:background="@color/shfaf"
				android:padding="@dimen/spacing_normal"
				android:src="@drawable/ic_back"/>

			<com.zaker.android.sapeh.app.main.activitymain.LightTextView
				android:id="@+id/name_sitteng"
				style="@style/Text.SectionLabel"
				android:layout_width="wrap_content"
				android:layout_height="@dimen/toolbar_height"
				android:gravity="center_vertical"
				android:layout_gravity="center_vertical"
				android:paddingStart="@dimen/_16mdp"
				android:paddingLeft="@dimen/_16mdp"
				android:paddingEnd="@dimen/_16mdp"
				android:paddingRight="@dimen/_16mdp"
				android:text="@string/settingss"
				/>

		</LinearLayout>

		<com.zaker.android.sapeh.app.main.activitymain.LightTextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/app_settings"
			android:textStyle="normal"
			android:textSize="@dimen/text_medium"
			android:layout_marginTop="@dimen/spacing_small"
			android:layout_marginStart="@dimen/spacing_normal"
			android:layout_marginEnd="@dimen/spacing_normal"
			android:textColor="@color/white_pressed"
			/>

		<com.zaker.android.sapeh.app.main.activitymain.LightTextView
			android:id="@+id/btnTrash"
			style="@style/Text.NormalLabel"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/trash"
			android:drawableStart="@drawable/ic_delete"
			android:background="?android:selectableItemBackground"
			android:padding="@dimen/spacing_normal"
			android:drawablePadding="@dimen/spacing_double"
			/>

		<Spinner
			android:id="@+id/themeColor"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingStart="0dp"
			android:paddingEnd="1dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<com.zaker.android.sapeh.app.main.activitymain.LightTextView
				style="@style/Text.NormalLabel"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/store_records_public"
				android:drawableStart="@drawable/ic_folder_open"
				android:layout_margin="@dimen/spacing_normal"
				android:drawablePadding="@dimen/spacing_double"
				/>

			<Switch
				android:id="@+id/swPublicDir"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/spacing_normal"
				android:layout_gravity="top"
				/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<com.zaker.android.sapeh.app.main.activitymain.LightTextView
				style="@style/Text.NormalLabel"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/keep_screen_on"
				android:layout_marginTop="@dimen/spacing_normal"
				android:layout_marginBottom="@dimen/spacing_normal"
				android:layout_marginEnd="@dimen/spacing_normal"
				android:layout_marginStart="@dimen/spacing_normal"
				android:drawableStart="@drawable/ic_lightbulb_on"
				android:drawablePadding="@dimen/spacing_double"
				/>

			<Switch
				android:id="@+id/swKeepScreenOn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/spacing_normal"
				android:layout_gravity="top"
				/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<com.zaker.android.sapeh.app.main.activitymain.LightTextView
				style="@style/Text.NormalLabel"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/ask_to_rename"
				android:layout_marginTop="@dimen/spacing_normal"
				android:layout_marginBottom="@dimen/spacing_normal"
				android:layout_marginEnd="@dimen/spacing_normal"
				android:layout_marginStart="@dimen/spacing_normal"
				android:drawableStart="@drawable/ic_pencil"
				android:drawablePadding="@dimen/spacing_double"
				/>

			<Switch
				android:id="@+id/swAskToRename"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/spacing_normal"
				android:layout_gravity="top"
				/>
		</LinearLayout>

		<Spinner
			android:id="@+id/name_format"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingStart="0dp"
			android:paddingEnd="1dp"/>

		<com.zaker.android.sapeh.app.main.activitymain.LightTextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/recording_settings"
			android:textStyle="normal"
			android:textSize="@dimen/text_medium"
			android:layout_marginTop="@dimen/spacing_small"
			android:layout_marginStart="@dimen/spacing_normal"
			android:layout_marginEnd="@dimen/spacing_normal"
			android:textColor="@color/white_pressed"
			/>

		<Spinner
			android:id="@+id/format"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingStart="0dp"
			android:paddingEnd="1dp"/>

		<Spinner
			android:id="@+id/sample_rate"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingStart="0dp"
			android:paddingEnd="1dp"/>

		<Spinner
			android:id="@+id/bit_rate"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingStart="0dp"
			android:paddingEnd="1dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<com.zaker.android.sapeh.app.main.activitymain.LightTextView
				style="@style/Text.NormalLabel"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/record_in_stereo"
				android:layout_marginTop="@dimen/spacing_normal"
				android:layout_marginBottom="@dimen/spacing_normal"
				android:layout_marginEnd="@dimen/spacing_normal"
				android:layout_marginStart="@dimen/spacing_normal"
				android:drawableStart="@drawable/ic_surround_sound_2_0"
				android:drawablePadding="@dimen/spacing_double"
				/>

			<Switch
				android:id="@+id/swRecordInStereo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/spacing_normal"
				android:layout_gravity="top"
				/>
		</LinearLayout>

		<com.zaker.android.sapeh.app.main.activitymain.LightTextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/other_settings"
			android:textStyle="normal"
			android:textSize="@dimen/text_medium"
			android:layout_marginTop="@dimen/spacing_small"
			android:layout_marginStart="@dimen/spacing_normal"
			android:layout_marginEnd="@dimen/spacing_normal"
			android:textColor="@color/white_pressed"
			/>

		<!--<TextView-->
		<!--android:id="@+id/btnDeleteAll"-->
		<!--style="@style/Text.NormalLabel"-->
		<!--android:layout_width="match_parent"-->
		<!--android:layout_height="wrap_content"-->
		<!--android:text="@string/delete_all"-->
		<!--android:drawableStart="@drawable/ic_delete_forever"-->
		<!--android:background="?android:selectableItemBackground"-->
		<!--android:padding="@dimen/spacing_normal"-->
		<!--android:drawablePadding="@dimen/spacing_double"-->
		<!--/>-->

		<com.zaker.android.sapeh.app.main.activitymain.LightTextView
			android:id="@+id/txt_records_count"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="start"
			android:textColor="@color/text_primary_light"
			android:fontFamily="sans-serif-light"
			android:layout_marginTop="@dimen/spacing_normal"
			android:layout_marginStart="@dimen/spacing_normal"
			android:textSize="@dimen/text_xmedium"
			tools:text="@string/total_record_count"/>

		<com.zaker.android.sapeh.app.main.activitymain.LightTextView
			android:id="@+id/txt_total_duration"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="start"
			android:textColor="@color/text_primary_light"
			android:fontFamily="sans-serif-light"
			android:layout_marginStart="@dimen/spacing_normal"
			android:textSize="@dimen/text_xmedium"
			tools:text="@string/total_duration"/>

		<com.zaker.android.sapeh.app.main.activitymain.LightTextView
			android:id="@+id/txt_available_space"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="start"
			android:textColor="@color/text_primary_light"
			android:fontFamily="sans-serif-light"
			android:layout_marginStart="@dimen/spacing_normal"
			android:textSize="@dimen/text_xmedium"
			android:layout_marginBottom="@dimen/spacing_normal"
			tools:text="Available space: 34h:12m:22s "/>



		<View
			android:id="@+id/space"
			android:layout_width="match_parent"
			android:layout_height="@dimen/spacing_normal"
			android:elevation="@dimen/toolbar_elevation"
			/>
	</LinearLayout>
</ScrollView>